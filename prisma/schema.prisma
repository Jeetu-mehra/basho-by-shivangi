// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- Enums ---
enum Role {
  CUSTOMER
  ADMIN
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

// --- Models ---
model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique // Matches Clerk Authentication ID
  email     String   @unique
  name      String?
  role      Role     @default(CUSTOMER)
  
  orders    Order[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?
  products    Product[]
  createdAt   DateTime  @default(now())
}

model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String
  price       Float
  stock       Int      @default(0)
  images      String[] // Array of image URLs
  isFeatured  Boolean  @default(false)
  
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  
  orderItems  OrderItem[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([categoryId])
  @@index([slug])
}

model Order {
  id              String      @id @default(cuid())
  orderNumber     String      @unique
  
  userId          String?     
  user            User?       @relation(fields: [userId], references: [id])
  
  customerName    String
  customerEmail   String
  address         Json        
  
  total           Float
  status          OrderStatus @default(PENDING)
  
  paymentId       String?
  
  items           OrderItem[]

  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  
  productId String
  product   Product @relation(fields: [productId], references: [id])
  
  quantity  Int
  price     Float   
}

// --- WORKSHOP SECTION ---

enum WorkshopStatus {
  UPCOMING
  ACTIVE
  COMPLETED
  CANCELLED
}

model Workshop {
  id            String   @id @default(cuid())
  title         String
  slug          String   @unique
  description   String
  price         Float
  image         String   // Main hero image
  gallery       String[] // Array of image URLs for the gallery
  
  // Meta Details
  duration      String   // e.g. "3 Hours"
  maxStudents   Int
  location      String   // e.g. "Studio A"
  language      String   // e.g. "English / Japanese"
  level         String   // e.g. "Beginner Friendly"
  
  // Instructor Info
  instructorName  String
  instructorRole  String
  instructorImage String

  status        WorkshopStatus @default(UPCOMING)
  
  // Relationships
  sessions      WorkshopSession[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Represents a specific date/time for the workshop (e.g., Oct 12 at 10 AM)
model WorkshopSession {
  id            String   @id @default(cuid())
  date          DateTime 
  time          String   // e.g. "10:00 AM"
  spotsTotal    Int
  spotsBooked   Int      @default(0)
  
  workshopId    String
  workshop      Workshop @relation(fields: [workshopId], references: [id])
  
  registrations WorkshopRegistration[]
}

model WorkshopRegistration {
  id            String   @id @default(cuid())
  customerName  String
  customerEmail String
  amountPaid    Float
  
  sessionId     String
  session       WorkshopSession @relation(fields: [sessionId], references: [id])
  
  createdAt     DateTime @default(now())
}